generator client {
  provider = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  tasks     Task[]
  createdAt DateTime @default(now())
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

model Task {
  id          Int         @id @default(autoincrement())
  title       String
  description String?
  status      TaskStatus  @default(TODO)
  createdAt   DateTime    @default(now())
  user        User        @relation(fields: [userId], references: [id])
  userId      Int
}